# Use official Node image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Build the app (if using TypeScript)
RUN npm run build

# Expose port
EXPOSE 3000

# Run the app
CMD ["node", "dist/main.js"]
